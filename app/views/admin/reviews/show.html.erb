<div class="container mx-auto">
  <div class="row">
    <div class="col-md-3">
      <div class="userinfo d-flex">
        <% if @review.user.profile_image.attached? %>
          <%= image_tag @review.user.profile_image, size: "150x150", class: "userradius mt-5" %>
        <% else %>
          <%= image_tag 'no_image', size: "150x150", class: "userradius mt-5" %>
        <% end %>
        <p class="h5 d-flex align-items-end"><strong><%= @review.user.nickname %></strong></p>
      </div>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-3 d-flex align-items-end">
      <%= @review.created_at.strftime('%Y/%m/%d') %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-12 text-center">
      <%= image_tag @review.reviewimage %>
      <h5 class="mt-3"><%= @review.item %></h5>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-3">
      <h5 class="review_title text-center"><i class="fa-solid fa-fish"></i>　<%= @review.title %></h5>
    </div>
  </div>

  <div class="row mt-5 mb-3">
    <div class="col-md-10 mx-auto review_text">
      <h6><%= @review.body %></h6>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 text-right">
      <%= link_to "Delete", admin_review_path(@review.id), method: :delete, class: "btn btn-secondary", "data-confirm" => "本当に削除しますか？" %>
    </div>
  </div>
</div>