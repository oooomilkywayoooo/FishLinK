<div class="container mx-auto">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2 class="user mt-5">User List</h2>

      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Status</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag user.profile_image, size: "50x50", class: "userradius" %>
              <% else %>
                <%= image_tag 'no_image', size: "50x50", class: "userradius" %>
              <% end %>
              <span class="ml-5"><%= user.nickname %></span>
            </td>
            <td class="align-middle">
              <% if user.is_active == true %>
                <p class="text-success">利用中</p>
              <% else %>
                <p class="text-danger">利用中止</p>
              <% end %>
            </td>
            <td></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>