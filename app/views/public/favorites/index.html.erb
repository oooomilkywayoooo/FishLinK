<div class="container mx-auto">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h1 class="user mt-5 pb-2"><i class="fa-solid fa-heart"></i> Article List</h1>
      <table class="table">
        <thead>
          <tr>
            <th>User</th>
            <th>Title</th>
            <th></th>
          </tr>
        </thead>
        <% if @favorite_list.present? %>
          <% @favorite_list.each do |post| %>
          <tbody>
            <tr>
              <td>
                <% if post.user.profile_image.attached? %>
                  <%= image_tag post.user.profile_image, size: "50x50", class: "userradius" %>
                <% else %>
                  <%= image_tag 'no_image', size: "50x50", class: "userradius" %>
                <% end %>
                <span class="ml-5">
                  <%= link_to post.user.nickname, user_path(post.user_id) %>
                  </span>
              </td>
              <td><%= post.title %></td>
              <td class="text-right"><%= link_to "Show", post_path(post), class: "btn btn-secondary" %></td>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>