<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="userinfo d-flex">
        <% if @post.user.profile_image.attached? %>
          <%= image_tag @post.user.profile_image, size: "150x150", class: "userradius mt-5" %>
        <% else %>
          <%= image_tag 'no_image', size: "150x150", class: "userradius mt-5" %>
        <% end %>
        <p class="d-flex align-items-end"><strong><%= @post.user.nickname %></strong></p>
      </div>
    </div>
    <div class="col-md-6"></div>
    <div class="col-md-3 d-flex align-items-end">
      <%= @post.created_at.strftime('%Y/%m/%d') %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-7 mt-5">
      <%= image_tag @post.postimage %>
    </div>
    <div class="col-md-5 mt-5">
      <p class="h2 text-center"><%= @post.title %></p>
      <p class="h4 mt-5"><%= @post.body %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9"></div>
    <div class="col-md-3 d-flex">

      <p><i class="fa-solid fa-comment-dots"></i><%= @comments_count %></p>
      <p class="ml-3"><i class="fa-solid fa-thumbs-up"></i><%= @goods_count %></p>
    </div>
  </div>
</div>