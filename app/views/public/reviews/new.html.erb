<div class="wrapper">
  <div class="container" style="width:600px;">
    <div id="review">
      <h2 class="text-primary mt-5">NEW Review</h2>
    </div>

    <%= form_with model: @review do |f| %>
    <div class="field mt-5 mx-auto" style="width:400px;">
      <span class="review"><%= f.label :"Image" %></span><br />
      <%= f.file_field :reviewimage, accept: "image/*" %>
    </div>

    <div class="field mt-5 mx-auto" style="width:400px;">
      <span class="review"><%= f.label :"Title" %></span><br />
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field mt-5 mx-auto" style="width:400px;">
      <span class="review"><%= f.label :"Item Name" %></span><br />
      <%= f.text_field :item, class: "form-control" %>
    </div>

    <div class="field mt-5 mx-auto" style="width:400px;" id="star">
      <span class="review"><%= f.label :star, "Star" %></span><br />
      <%= f.hidden_field :star, id: :review_star %>

      <script>
        $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'review[star]',   # starカラムへの保存
        half: true,   # 星半分の入力
        });
      </script>
    </div>

    <div class="field mt-5 mx-auto" style="width:400px;">
      <span class="review"><%= f.label :"Body" %></span><br />
      <%= f.text_area :body, class: "form-control", rows: "5" %>
    </div>

    <div class="actions mt-5 mx-auto text-center" style="width:400px;">
      <%= f.button :type => "submit", class: "review-btn px-5 py-3 mb-5", style: 'border-style: none;' do %>
       <i class="fa-solid fa-file-pen"></i>
      <% end %>
    </div>
    <% end %>
  </div>
</div>