<div class="container mx-auto">
  <div class="top">
  </div>
  <div class="row">
    <div class="col-md-4 main">
      <div class="weather">
        <h3>〇天気</h3>
          <%= select_tag :spot_id, options_for_select(
            Spot.all.map{ |spot| [spot.name, spot.spot_id] }, 1),
            id: "wheather-select", class: "ml-3" %>
        <div id="weather"></div>
        <%= javascript_pack_tag 'weather' %>
      </div>
    </div>
  </div>
</div>
