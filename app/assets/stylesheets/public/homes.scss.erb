.top{
  background-image: image-url("<%= asset_path('sea_image.jpg') %>");
  background-position: center;
  height: 500px;
  text-align: right;
  width: 100%;
}

.about{
    padding-top: 200px;
}

.main {
  margin-top: 50px;
}

#weather {
  display: flex;
  margin-left: 50px;
  padding:30px 0 30px 50px;
}

.weather__content--report {
  padding: 0 30px;
  border-right: 1px solid gray;
  border-left: 1px solid gray;
}

.fa-sun{
  color: orange;
}

.fa-fish{
  color: #4169e1;
}

@media screen and (max-width: 768px) {
  .top{
    width: 100%;
    background-image: image-url("<%= asset_path('welikefish-small.png')%>");
    background-size: cover;
  }

  .flexbox{
      width: 50%;
      margin: 0 auto;
  }

  #weather {
    display: flex;
    flex-wrap: wrap;
    margin: 0 30px;
  }
}

@media screen and (max-width: 375px) {
  .top{
    width: 100%;
    background-image: image-url('welikefish-small.png');
    background-size: cover;
  }

  #weather {
    display: flex;
    flex-wrap: wrap;
    margin: 0 30px;
    padding: 30px 0 30px 30px;
  }
}