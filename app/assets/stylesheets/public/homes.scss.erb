.top{
  background-image: image-url("<%= asset_path('sea_image.jpg') %>");
  background-position: center;
  height: 500px;
  text-align: right;
  width: 100%;
}

.abouthedding {
  padding-top: 200px;
  border-bottom: solid 3px #cce4ff;
  position: relative;
}

.abouthedding:after {
  position: absolute;
  content: " ";
  display: block;
  border-bottom: solid 3px #5472cd;
  bottom: -3px;
  width: 20%;
}

.main {
  margin-top: 50px;
}

#weather {
  display: flex;
  margin-left: 50px;
  padding:30px 0 30px 50px;
}

.weather__content--report {
  padding: 0 20px;
  border-right: 1px solid gray;
  border-left: 1px solid gray;
}

.fa-sun{
  color: orange;
}

.fa-fish{
  color: #4169e1;
}

#new-card{
  margin: 10px 5px;
}

.topweather {
  position: relative;
  padding: 0.25em 0;
}

.topweather:after {
  content: "";
  display: block;
  height: 4px;
  background: -webkit-linear-gradient(to right, rgb(255, 186, 115), #ffb2b2);
  background: linear-gradient(to right, rgb(255, 186, 115), #ffb2b2);
}

.topnew {
  position: relative;
  padding: 0.25em 0;
}

.topnew:after {
  content: "";
  display: block;
  height: 4px;
  background: -webkit-linear-gradient(to right, rgb(178, 191, 255), #b6ffb2);
  background: linear-gradient(to right, rgb(178, 191, 255), #b6ffb2);
}

@media screen and (max-width: 768px) {
  #new-card{
    margin: 10px auto;
  }
  .weather__content--report p {
    font-size: 12px;
  }
  .weather__content--report{
    padding: 0 10px;
  }
}

@media screen and (max-width: 375px) {
  #new-card{
    margin: 10px auto;
  }
}