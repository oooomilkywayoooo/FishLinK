.top{
  background-image: image-url("<%= asset_path('sea_image.jpg') %>");
  background-position: center;
  height: 500px;
  text-align: right;
  width: 100%;
}

.about{
    padding-top: 200px;
}

.main {
  margin-top: 50px;
}

#weather {
  display: flex;
  margin-left: 50px;
  padding:30px 0 30px 50px;
}

.weather__content--report {
  padding: 0 20px;
  border-right: 1px solid gray;
  border-left: 1px solid gray;
}

.fa-sun{
  color: orange;
}

.fa-fish{
  color: #4169e1;
}

#new-card{
  margin: 10px 5px;
}

@media screen and (max-width: 768px) {
  #new-card{
    margin: 10px auto;
  }
  .weather__content--report p {
    font-size: 12px;
  }
  .weather__content--report{
    padding: 0 10px;
  }
}

@media screen and (max-width: 375px) {
  #new-card{
    margin: 10px auto;
  }
}